# Environnement
NODE_ENV=development
SERVICE_NAME=data-service

PORT=5002
SERVER_TIMEOUT=60000

# Taille maximale des requêtes
MAX_REQUEST_BODY_SIZE=1mb

# URL de connexion MongoDB (OBLIGATOIRE)
MONGO_URI=

# Secret pour les tokens d'accès (OBLIGATOIRE)
JWT_SECRET=

# Secret pour les refresh tokens (OBLIGATOIRE)
JWT_REFRESH_SECRET=

# Origine autorisée pour CORS
CORS_ORIGIN=http://localhost:3000

# En production, utilisez votre domaine :
# CORS_ORIGIN=https://yourdomain.com

# URL du service de notification
NOTIFICATION_SERVICE_URL=http://localhost:5005

# Configuration Free Mobile pour SMS (optionnel)
FREE_MOBILE_USERNAME=
FREE_MOBILE_API_KEY=

# Niveau de logs (error, warn, info, debug)
LOG_LEVEL=info

